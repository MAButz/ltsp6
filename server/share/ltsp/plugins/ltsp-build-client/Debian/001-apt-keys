case "$MODE" in
    commandline)
            add_option "apt-keys" "`eval_gettext "include the listed keys in the apt keyring"`" "advanced" "true"
            ;;
    configure)
            if [ -n "$option_apt_keys_value" ]; then
                APT_KEYS="$(echo $option_apt_keys_value | tr ',' ' ')"
            fi
            ;;
    after-install)
            # add keys to the apt keyring
            for key in $APT_KEYS ; do
                if grep -q 'BEGIN PGP PUBLIC KEY BLOCK' "$key" ; then
                    # Convert from ASCII-armored key to binary gpg key
                    tmpdir=$(mktemp -d)
                    keyname=$(basename $key)
                    tmpkey=$tmpdir/$keyname
                    awk '/^$/{ x = 1; } /^[^=-]/{ if (x) { print $0; } ; }' $key | base64 -d > $tmpkey
                    cp $tmpkey $ROOT/etc/apt/trusted.gpg.d/ltsp-${keyname}.gpg
                    rm $tmpkey
                    rmdir $tmpdir
                else
                    cp $key $ROOT/etc/apt/trusted.gpg.d/ltsp-$(basename ${key%%.gpg}).gpg
                fi
            done
            ;;
esac
